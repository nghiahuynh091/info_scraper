name: optibot-scheduler

jobs:
  - name: daily-optibot
    source_dir: /
    github:
      repo: username/repo
      branch: main
    run_command: python3 main.py
    environment_slug: docker
    instance_count: 1
    instance_size_slug: basic-xxs

    # Environment variables
    envs:
      - key: OPENAI_API_KEY
        value: YOUR_OPENAI_API_KEY_HERE
        type: SECRET

    # Schedule: daily at 7:00 PM (VN UTC+7)
    schedule: "0 12 * * *"
